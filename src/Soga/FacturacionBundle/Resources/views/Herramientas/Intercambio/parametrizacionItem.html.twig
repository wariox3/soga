{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h1>Parametrizacion: <small><label>item</label></small></h1>
    </div>

    <form id="FrmTabla" action="{{ path('soga_facturacion_herramientas_intercambio_contai_parametrizacion_item') }}" method="POST" novalidate>
        
        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>ID</th>
                <th>Concepto</th>
                <th>Aplica</th>
                <th>Base</th>
                <th>Cuenta</th>
            </tr>

            {% for arItem in arItem %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arItem.codcom }}">{{ arItem.codcom }}</td>
                <td>{{ arItem.concepto }}</td>
                <td>{{ arItem.sumar }}</td>
                <td>{{ arItem.basefte }}</td>
                <td><input class="form-control input-sm" style="width:100px; height: 25px" type="text" name="TxtCuenta[]"  value="{{ arItem.cuentaInterface }}" size="9" maxlength = 10 /></td>
            </tr>
            {% endfor %}
        </table>  
    
    <!-- Botones Menu Items -->
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">                                
            <button class="btn btn-default" type="submit" name="OpSubmit" value="OpGuardar" >Guardar</button>                   
        </div>                   
    </div>  
    </form>
    <br />
</div>

{% endblock %}