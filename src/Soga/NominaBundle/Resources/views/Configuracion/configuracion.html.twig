{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function() {
        $("#TxtFechaDesde").datepicker({dateFormat: 'yy/mm/dd'});
        $("#TxtFechaHasta").datepicker({dateFormat: 'yy/mm/dd'});
    });
</script>
<div class="container">

    <br/>
    <form class="form-horizontal" action="{{ path('soga_nomina_configuracion') }}" method="POST">
        <fieldset>

            <!-- Form Name -->
            <legend>Configuracion general de nomina</legend>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Comprobante</label>  
                <div class="col-md-4">
                    <input id="TxtComprobante" name="TxtComprobante" type="text" placeholder="codigo comprobante" Value="{{arNomConfiguracion.comprobanteInterface}}" class="form-control input-md">
                    <span class="help-block">Comprobante para la interface contable Contai</span>  
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Comprobante prestaciones</label>  
                <div class="col-md-4">
                    <input id="TxtComprobantePrestaciones" name="TxtComprobantePrestaciones" type="text" placeholder="codigo comprobante" Value="{{arNomConfiguracion.comprobantePrestaciones}}" class="form-control input-md">
                    <span class="help-block">Comprobante para la interface prestaciones</span>  
                </div>
            </div>            
            
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Ruta exportacion</label>  
                <div class="col-md-4">
                    <input id="TxtRuta" name="TxtRuta" type="text" placeholder="ruta o directorio" Value="{{arNomConfiguracion.rutaExportacion}}" class="form-control input-md">
                    <span class="help-block">Ruta donde se exportan los archivos</span>  
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Cuenta trabajadores mision</label>  
                <div class="col-md-4">
                    <input id="TxtCuentaTrabajadoresMision" name="TxtCuentaTrabajadoresMision" type="text" placeholder="cuenta trabajadores mision" Value="{{arNomConfiguracion.cuentaTrabajadoresMision}}" class="form-control input-md">
                    <span class="help-block">Cuenta trabajadores mision</span>  
                </div>
            </div>
            
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Cuenta trabajadores planta</label>  
                <div class="col-md-4">
                    <input id="TxtCuentaTrabajadoresPlanta" name="TxtCuentaTrabajadoresPlanta" type="text" placeholder="cuenta trabajadores planta" Value="{{arNomConfiguracion.cuentaTrabajadoresPlanta}}" class="form-control input-md">
                    <span class="help-block">Cuenta trabajadores planta</span>  
                </div>
            </div>            
            
            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="singlebutton"></label>
                <div class="col-md-4">
                    <button id="singlebutton" class="btn btn-success" type="submit" name="OpSubmit" value="OpGuardar">Guardar</button>
                </div>
            </div>

        </fieldset>
    </form>    

</div>

{% endblock %}