{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h1>Intercambio de datos: <small><label id="lblNombreDocumento">Terceros</label></small></h1>
    </div>

    <form id="FrmTabla" action="{{ path('soga_nomina_herramientas_intercambio_contai_terceros') }}" method="POST" novalidate>

        <table class="table table-striped table-bordered table-condensed table-hover" style="font-size:12px">
            <tr>
                <th>CODIGO</th>
                <th>CEDULA</th>
                <th>NOMBRE</th>
                <th>ZONA</th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>

            </tr>

            {% for arEmpleados in arEmpleados %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arEmpleados.codemple }}">{{ arEmpleados.codemple }}</td>
                <td>{{ arEmpleados.cedemple }}</td>
                <td>{{ arEmpleados.nomemple}} {{ arEmpleados.nomemple1}} {{ arEmpleados.apemple}} {{ arEmpleados.apemple1}}</td>
                <td>{{ arEmpleados.codzona }}</td>                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arEmpleados.codemple }}" /></td>
            </tr>
            {% endfor %}
        </table>

        <div class="navigation">
            {{ knp_pagination_render(arEmpleados) }}
        </div>

        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                <button class="btn btn-default" type="submit" name="OpSubmit" value="OpExportar" >Exportar seleccionados</button>
            </div>
        </div>

        <br /><br />
        <hr/>
    </form>
</div>

{% endblock %}