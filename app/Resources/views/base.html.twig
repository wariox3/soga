<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Soga!{% endblock %}</title>

        {% block stylesheets %}            
            <link href="{{ asset('soga/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />                        
            <link href="{{ asset('soga/css/jquery-ui.css') }}" type="text/css" rel="stylesheet" /> 
            <link href="{{ asset('soga/css/general.css') }}" rel="stylesheet" />
            <link href="{{ asset('soga/css/menu.css') }}" rel="stylesheet" />
        {% endblock %}
        {% block javascripts %}             
            <script src="{{ asset('soga/js/jquery-1.10.2.min.js') }}"></script>
            <script src="{{ asset('soga/js/jquery-ui.js') }}"></script>
            <script src="{{ asset('soga/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('soga/js/general.js') }}"></script>   
        {% endblock %}            
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        
        {% block body %}        
            {{ render(controller('SogaFrontEndBundle:Default:menu')) }}  
            {% block content %}

            {% endblock %}  
        {% endblock %}        

    </body>
</html>
