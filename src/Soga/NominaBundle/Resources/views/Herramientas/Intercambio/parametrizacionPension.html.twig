{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h1>Parametrizacion: <small><label>pension</label></small></h1>
    </div>

    <form id="FrmTabla" action="{{ path('soga_nomina_herramientas_intercambio_contai_parametrizacion_pension') }}" method="POST" novalidate>
        
        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Nit</th>
            </tr>

            {% for arPension in arPension %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arPension.codpension }}">{{ arPension.codpension }}</td>
                <td>{{ arPension.pension }}</td>
                <td><input class="form-control input-sm" style="width:100px; height: 25px" type="text" name="TxtNit[]"  value="{{ arPension.nit }}" size="9" maxlength = 9 /></td>
            </tr>
            {% endfor %}
        </table>  
    
    <!-- Botones Menu Items -->
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">                                
            <button class="btn btn-default" type="submit" name="OpSubmit" value="OpGuardar" >Guardar</button>                   
        </div>                   
    </div>  
    </form>
    <br />
</div>

{% endblock %}